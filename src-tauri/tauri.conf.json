{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Nudge",
  "version": "0.1.0",
  "identifier": "dev.sambhu.nudge",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "label": "main",
        "title": "nudge",
        "width": 800,
        "height": 600,
        "visible": false,
        "skipTaskbar": true,
        "closable": false
      }
    ],
    "security": {
      "csp": null,
      "capabilities": [
        {
          "identifier": "main-capability",
          "description": "Capability for the main application",
          "windows": ["main", "overlay", "settings"],
          "permissions": [
            "core:default",
            "core:window:allow-close",
            "core:window:allow-show",
            "core:window:allow-hide",
            "core:window:allow-set-focus",
            "store:allow-get",
            "store:allow-set",
            "store:allow-save",
            "store:allow-load",
            "store:default",
            "autostart:allow-enable",
            "autostart:allow-disable",
            "autostart:allow-is-enabled",
            "autostart:default"
          ]
        }
      ]
    }
  },
  "bundle": {
    "active": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "webviewInstallMode": {
        "type": "downloadBootstrapper"
      }
    }
  }
}